      "npm run lint"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ext": "js,ts,json,yaml",
    "ignore": [
      ".git",
      "node_modules",
      "dist",
      "src/logs/*",
      "src/**/*.{spec,test}.ts"
    ],
    "exec": "tsc -p . && tsc-alias && ts-node -r tsconfig-paths/register --transpile-only src/server.ts"
  },
  "mocha": {
    "spec": "src/**/*.{spec,test}.ts"
