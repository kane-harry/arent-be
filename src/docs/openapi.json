            "schema": {
              "type": "object",
              "properties": {
                "owner": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "code": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "pin": {
                  "type": "string"
                }
              },
              "required": [
                "owner",
                "type",
                "code",
                "password",
                "pin"
              ]
            },
            "examples": {
              "Reset Password Type Email": {
                "value": {
                  "owner": "test-admin@test.com",
                  "type": "email",
                  "code": "012345",
                  "password": "Test123!",
                  "pin": "1111"
                }
              },
              "Reset Password Type Phone": {
                "value": {
                  "owner": "84987654321",
                  "type": "phone",
                  "code": "012345",
                  "password": "Test123!",
                  "pin": "1111"
                }
              }
            }
          }
        }
      },
