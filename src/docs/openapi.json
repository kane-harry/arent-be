                "owner": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              },
              "required": [
                "owner",
                "type"
              ]
            },
            "examples": {
              "Forgot Pin Type Email": {
                "value": {
                  "owner": "test-admin@test.com",
                  "type": "email"
                }
              },
              "Forgot Pin Type Phone": {
                "value": {
                  "owner": "84987654321",
                  "type": "phone"
                }
              }
            }
          }
        }
      },
      "ResetPinDto": {
        "content": {
