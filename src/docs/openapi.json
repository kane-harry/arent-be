    "responses": {
      "422": {
        "description": "Unprocessable Entity Error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number",
                      "default": 422
                    },
                    "code": {
                      "type": "number",
                      "example": 1001
                    },
                    "message": {
                      "type": "string",
                      "example": "The request failed due to a validation error."
                    },
                    "meta_data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "field": {
                            "type": "string",
                            "example": "field_1"
                          },
                          "message": {
                            "type": "string",
                            "example": "field_1 invalid"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
